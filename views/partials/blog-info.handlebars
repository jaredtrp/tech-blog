<article class="card">
            <h2 class="card-header text-dark bg-primary">{{title}}</h2>
            <div class=" col-12 col-md-6 bg-dark text-light p-3 flex-column">
                <div class="flex-row justify-space-between">
                    <span>{{blog_text}}</span>
                </div>
                <div class="portfolio-languages col-12 col-md-6 mb-2 bg-dark text-light p-3 flex-column ">
                    Created by {{user.username}} on
                    {{format_date createdAt}}
                    |
                     <a href="/blog/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
                </div>
            </div>
</article>