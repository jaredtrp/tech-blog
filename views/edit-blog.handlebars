<article>
    <h2 class="page-title">
        Edit Post
    </h2>
    <form class="edit-blog-form card card-header text-dark bg-primary">
        <div>
            <input name="blog-title" type="text" value="{{Blog.title}}">
            <span>Edit if you want to!</span>
        </div>
        <div>
          <input name = "blog-text" type="text" value="{{Blog.blog_text}}">
          <span>Please edit this!</span>
        </div>
        <div>
          {{Blog.title}}
        </div>
        <div>
            {{Blog.blog_text}}
        </div>
        <div>
            <a href="/post/{{blog.id}}">{{blog.comments.length}} {{format_plural "comment" blog.comments.length}}</a>
        </div>
        <button type="submit" class="btn log">Save post</button>
        <button type="button" class="delete-blog-btn btn log">Delete post</button>
    </form>
</article>

<form class="comment-form card card-header text-dark bg-primary ">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button class="btn log" type="submit">add comment</button>
  </div>
</form>

{{> comments Blog.comments}}

<script src="/javascript/edit-blog.js"></script>
<script src="/javascript/delete-blog.js"></script>
<script src="/javascript/comment.js"></script>